PKG_CXXFLAGS = -I../inst/include -DPRIMME_INT_SIZE=0
PKG_LIBS = -Lprimme -lprimme $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)

$(SHLIB): primme/libprimme.a

primme/libprimme.a:
	@(cd primme && $(MAKE) -f make_primme libprimme.a \
	  CC="$(CC)" CFLAGS="$(CFLAGS) $(CPICFLAGS) -DF77UNDERSCORE -DUSE_XHEEV -DUSE_ZGESV -DPRIMME_INT_SIZE=0" AR="$(AR)" \
	  RANLIB="$(RANLIB)")
